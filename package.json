{
	"name": "create-a8-app",
	"version": "1.5.0",
	"author": "Alexandre Sanchez (@alex73630)",
	"license": "MIT",
	"description": "Quickest way to start a new TypeScript app, inspired by create-t3-app",
	"repository": {
		"type": "git",
		"url": "https://github.com/alex73630/create-a8-app.git"
	},
	"type": "module",
	"exports": "./dist/index.js",
	"bin": {
		"create-a8-app": "./dist/index.js"
	},
	"engines": {
		"node": ">=22"
	},
	"packageManager": "npm@11.4.1",
	"scripts": {
		"typecheck": "tsc",
		"build": "tsdown",
		"dev": "tsdown --watch",
		"clean": "rm -rf dist .turbo node_modules",
		"start": "node dist/index.js",
		"lint": "eslint . --report-unused-disable-directives src/**/*.ts",
		"lint:fix": "npm run lint -- --fix",
		"format": "prettier --write --plugin-search-dir=. **/*.{cjs,mjs,ts,tsx,md,json} --ignore-unknown --no-error-on-unmatched-pattern",
		"format:check": "npm run format -- --check",
		"semantic-release": "semantic-release",
		"prepare": "is-ci || husky",
		"commit": "cz"
	},
	"keywords": [
		"create-a8-app",
		"alex73630",
		"a8-stack",
		"typescript"
	],
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@eslint/js": "^9.27.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@types/eslint": "^9.6.1",
		"@types/inquirer": "^9.0.8",
		"@types/lint-staged": "^13.3.0",
		"@types/node": "^22.15.23",
		"@types/prettier": "^3.0.0",
		"@typescript-eslint/eslint-plugin": "^8.33.0",
		"@typescript-eslint/parser": "^8.33.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-import-resolver-typescript": "^4.4.1",
		"eslint-plugin-import-x": "^4.13.3",
		"eslint-plugin-prettier": "^5.4.0",
		"husky": "^9.1.7",
		"is-ci": "^4.1.0",
		"lint-staged": "^16.1.0",
		"prettier": "^3.5.3",
		"semantic-release": "^24.2.5",
		"tsdown": "^0.12.4",
		"type-fest": "^4.41.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.33.0"
	},
	"dependencies": {
		"@types/fs-extra": "^11.0.4",
		"@types/gradient-string": "^1.1.6",
		"chalk": "^5.4.1",
		"commander": "^14.0.0",
		"execa": "^9.6.0",
		"fs-extra": "^11.3.0",
		"gradient-string": "^3.0.0",
		"handlebars": "^4.7.8",
		"inquirer": "^12.6.3",
		"ora": "^8.2.0",
		"sort-package-json": "^3.2.1"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}